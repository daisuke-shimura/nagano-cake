<h3 class="my-3"><%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細</h3>


<div class="row">
  <div class="col-4">会員ID</div>
  <div class="col-8"><%= @customer.id %></div>
</div>

<div class="row">
  <div class="col-4">氏名</div>
  <div class="col-8"><%= @customer.last_name %> <%= @customer.first_name %></div>
</div>

<div class="row">
  <div class="col-4">フリガナ</div>
  <div class="col-8"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></div>
</div>

<div class="row">
  <div class="col-4">郵便番号</div>
  <div class="col-8"><%= @customer.post_number %></div>
</div>

<div class="row">
  <div class="col-4">住所</div>
  <div class="col-8"><%= @customer.address %></div>
</div>

<div class="row">
  <div class="col-4">電話番号</div>
  <div class="col-8"><%= @customer.phone_number %></div>
</div>

<div class="row">
  <div class="col-4">メールアドレス</div>
  <div class="col-8"><%= @customer.email %></div>
</div>

<div class="row">
  <div class="col-4">会員ステータス</div>
  <div class="col-8">
    <% if @customer.is_active %>
      <p class="font-weight-bold text-success">有効</p>
    <% else %>
      <p class="font-weight-bold text-secondary">退会</p>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-around">
  <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success" %>
  <%= link_to "注文履歴一覧を見る", admin_root_path(customer_id: @customer.id), class:"btn btn-primary" %>
</div>