<h3 class="my-3">注文履歴詳細</h3>


<div class="row">
  <div class="col-2">購入者</div>
  <div class="col-4">
    <%= link_to admin_customer_path(@order.customer.id) do %>
      <%= @order.customer.last_name %> <%= @order.customer.first_name %>
    <% end %>
  </div>
</div>


<div class="row">
  <div class="col-2">注文日</div>
  <div class="col-4">
    <%= (@order.created_at).year %>/<%= (@order.created_at).month %>/<%= (@order.created_at).day %>
  </div>
</div>


<div class="row">
  <div class="col-2">配送先</div>
  <div class="col-4">
    〒<%= @order.post_number %> <%= @order.address %><br>
    <%= @order.customer.last_name %> <%= @order.customer.first_name %>
  </div>
</div>


<div class="row">
  <div class="col-2">支払い方法</div>
  <div class="col-4">
    <%= @order.payment_method_i18n %>
  </div>
</div>


<div class="row">
  <div class="col-2">注文ステータス</div>
  <div class="col-2">

  </div>
  <div class="col-2"></div>
</div>

<div class="row">
  <div class="col-8">
    <table class="table table-inverse my-3">
      <thead class="table-secondary">
        <tr>
          <th>商品名</th>
          <th>単価</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_details.each do |detail| %>
        <tr>
          <td><%= detail.item.name %></td>
          <td><%= detail.item.price %></td>
          <td><%= detail.amount %></td>
          <td><%= (detail.item.price)*(detail.amount) %></td>
          <td><%= detail.making_status_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-4">
    <table class="my-3">
      <tr>
        <th>商品合計</th>
        <td><%= @order.total_cost %> 円</td>
      </tr>
      <tr>
        <th>送料</th>
        <td><%= @order.delivery_fee %> 円</td>
      </tr>
      <tr>
        <th>請求金額合計</th>
        <td><%= (@order.total_cost)+(@order.delivery_fee) %> 円</td>
      </tr>
    </table>
  </div>
</div>