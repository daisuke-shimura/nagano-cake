<h3>商品編集ページ</h3>
<%= form_with model:@item, url: admin_item_path(@item.id), method: :patch do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :introduction %>
  <%= f.text_area :introduction %>

  <%= f.submit "変更" %>
<% end %>