<div class="d-flex justify-content-between my-2">
  <h3>商品一覧</h3>
  <div>
    <%= link_to new_admin_item_path do %>
        <i class="fa-solid fa-circle-plus fa-2x"></i>
    <% end %>
  </div>
</div>


<table class="table table-hover table-inverse">
  <thead class="table-secondary">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>値段</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
        <% end %>
      </td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td>
        <% if item.is_active %>
          <p class="font-weight-bold text-success">販売中</p>
        <% else %>
          <p class="font-weight-bold text-secondary">販売停止中</p>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>