<h3 class="my-3">配送先登録 / 一覧</h3>

<%= form_with model: @address, url: address_index_path, method: :post do |f| %>
  <div class="row">
    <div class="col-4"><%= f.label :post_number, "郵便番号" %></div>
    <div class="col-4"><%= f.text_field :post_number %></div>
  </div>

  <div class="row">
    <div class="col-4"><%= f.label :address, "住所" %></div>
    <div class="col-8"><%= f.text_field :address, class:"w-75" %></div>
  </div>

  <div class="row">
    <div class="col-4"><%= f.label :name, "宛名" %></div>
    <div class="col-4"><%= f.text_field :name %></div>
    <div class="col-4"><%= f.submit "新規登録", class:"btn btn-success" %></div>
  </div>
<% end %>

<table class="table table-bordered my-3">
  <thead class="table-secondary">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr> 
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.post_number %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集", edit_address_path(address.id), class:"btn btn-success" %>
          <%= link_to "削除", address_path(address.id), method: :delete, data: { confirm: "削除してよろしいですか？" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>