<h1>配送先一覧</h1>
<table>
  <thead>
    <tr>
      <th>配送先名</th>
      <th>郵便番号</th>
      <th>住所</th>
      <th></th>
      <th></th>
      <th></th>
    </tr> 
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.name %></td>
        <td><%= address.number %></td>
        <td><%= address.place %></td>
        <td><%= link_to "編集", edit_address_path(address.id) %></td>
        <td><%= link_to "削除", address_path(address.id), method: :delete %></td>
        <td><%= address.customer_id %><td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />
<h2>配送先登録</h2>
<%= form_with model: @address, url: address_index_path, method: :post do |f| %>
  <%= f.label "配送先名" %><br />
  <%= f.text_field :name %>
  <br />
  <%= f.label "郵便番号" %><br />
  <%= f.text_field :number %>
  <br />
  <%= f.label "住所" %><br />
  <%= f.text_field :place %>
  <br />
  <%= f.submit "登録" %>
<% end %>
