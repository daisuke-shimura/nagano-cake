<h4>会員登録情報</h4>

<%= form_with model:@customer do |f| %>
  <div class="row">
    <div class="col-4">氏名</div>
    <div class="col-4"><%= f.text_field :last_name, class:"form-control" %></div>
    <div class="col-4"><%= f.text_field :first_name, class:"form-control" %></div>
  </div>
  <div class="row">
    <div class="col-4">フリガナ</div>
    <div class="col-4"><%= f.text_field :last_name_kana, class:"form-control" %></div>
    <div class="col-4"><%= f.text_field :first_name_kana, class:"form-control" %></div>
  </div>
  <div class="row">
    <div class="col-4">郵便番号</div>
    <div class="col-4"><%= f.text_field :post_number, class:"form-control" %></div>
  </div>
  <div class="row">
    <div class="col-4">住所</div>
    <div class="col-8"><%= f.text_field :address, class:"form-control w-75" %></div>
  </div>
  <div class="row">
    <div class="col-4">電話番号</div>
    <div class="col-4"><%= f.text_field :phone_number, class:"form-control" %></div>
  </div>
  <div class="row">
    <div class="col-4">メールアドレス</div>
    <div class="col-4"><%= f.text_field :email, class:"form-control" %></div>
  </div>
  <div class="d-flex justify-content-around">
    <%= f.submit "編集内容を保存", class:"btn btn-success" %>
    <%= link_to "退会する", customer_confirm_path, class:"btn btn-danger" %>
  </div>
<% end %>

