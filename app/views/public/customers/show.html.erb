<h3><%= @customer.last_name %> <%= @customer.first_name %>さんのマイページ</h3>

<div class="d-flex my-2">
  <h4>登録情報</h4>
  <%= link_to "編集する", edit_customer_path(@customer.id), class:"btn btn-success ml-2" %>
</div>
<table class="table table-bordered">
  <tr>
    <th class="table-secondary">氏名</th>
    <td><%= @customer.last_name %> <%= @customer.first_name %></td>
  </tr>
  <tr>
    <th class="table-secondary">カナ</th>
    <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th class="table-secondary">郵便番号</th>
    <td><%= @customer.post_number %></td>
  </tr>
  <tr>
    <th class="table-secondary">住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th class="table-secondary">電話番号</th>
    <td><%= @customer.phone_number %></td>
  </tr>
  <tr>
    <th class="table-secondary">メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>

<div class="row my-2">
  <div class="col-2"><h4>配送先</h4></div>
  <div class="col-2"><%= link_to "一覧を見る", address_index_path, class:"btn btn-primary" %></div>
</div>

<div class="row my-2">
  <div class="col-2"><h4>注文履歴</h4></div>
  <div class="col-2"><%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %></div>
</div>
