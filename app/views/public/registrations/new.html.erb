<div class="row">
  <div class="col-4"><h2>新規会員登録</h2></div>
  <div class="col-8"><span class="text-danger">※</span>必須項目</div>
</div>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <!-- 会員情報入力 -->
  <div class="row"><p></p></div>
  <div class="row">
    <div class="col-4"><%= f.label "名前" %><span class="text-danger">※</span></div>
    <div class="col-4">
      <%= f.label "姓　" %>
      <%= f.text_field :sei %>
    </div>
    <div class="col-4">
      <%= f.label "名　" %>
      <%= f.text_field :mei %>
    </div>
  </div>

  <div class="row">
    <div class="col-4"><%= f.label "フリガナ" %><span class="text-danger">※</span></div>
    <div class="col-4">
      <%= f.label "セイ" %>
      <%= f.text_field :sei_kana %>
    </div>
    <div class="col-4">
      <%= f.label "メイ" %>
      <%= f.text_field :mei_kana %>
    </div>
  </div>

  <div class="row">
    <div class="col-4"><%= f.label "メールアドレス" %><span class="text-danger">※</span></div>
    <div class="col-4">
      <%= f.label "　　" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="col-4"><%= f.label "郵便番号" %></div>
    <div class="col-4">
      <%= f.label "　　" %>
      <%= f.text_field :post_number %>
    </div>
  </div>

  <div class="row">
    <div class="col-4"><%= f.label "住所" %></div>
    <div class="col-8">
      <%= f.label "　　" %>
      <%= f.text_field :place, class: 'w-75' %>
    </div>
  </div>

  <div class="row">
    <div class="col-4"><%= f.label "電話番号" %></div>
    <div class="col-4">
      <%= f.label "　　" %>
      <%= f.text_field :phone_number %>
    </div>
  </div>

  <div class="row">
    <div class="col-4"><%= f.label "パスワード" %><span class="text-danger">※</span>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
    <div class="col-4">
      <%= f.label "　　" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row">
    <div class="col-4"><%= f.label "パスワード（確認）" %><span class="text-danger">※</span></div>
    <div class="col-4">
      <%= f.label "　　" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row">
    <div class="col-4"></div>
    <div class="col-4">
      <button type="submit" class="btn btn-success w-75">新規登録</button>
    </div>
  </div>

<% end %>

<div class="row">
  <h4>既に登録済みの方</h4>
</div>
<div class="row"><%= render "public/shared/links" %>からログインしてください</div>
