<h3 class="my-3">注文履歴詳細</h3>

<div class="row">
  <div class="col-7">
    <h4>注文情報</h4>
    <table class="table table-bordered">
      <tr>
        <th class="table-secondary">注文日</th>
        <td><%= (@order.created_at).year %>/<%= (@order.created_at).month %>/<%= (@order.created_at).day %></td>
      </tr>
      <tr>
        <th class="table-secondary">配送先</th>
        <td><%= @order.address %></td>
      </tr>
      <tr>
        <th class="table-secondary">支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th class="table-secondary">ステータス</th>
        <td><%= @order.order_status_i18n %></td>
      </tr>
    </table>
  </div>

  <div class="col-5">
    <h4>請求情報</h4>
    <table class="table table-bordered">
      <tr>
        <th class="table-secondary">商品合計</th>
        <td><%= @order.total_cost %></td>
      </tr>
      <tr>
        <th class="table-secondary">配送料</th>
        <td><%= @order.delivery_fee %></td>
      </tr>
      <tr>
        <th class="table-secondary">請求額</th>
        <td><%= (@order.total_cost)+(@order.delivery_fee) %></td>
      </tr>
    </table>
  </div>
</div>


<div class="row">
  <div class="col">
    <h4>注文内容</h4>
    <table class="table table-bordered">
      <thead class="table-secondary">
        <tr>
          <th>商品</th>
          <th>単価</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_details.each do |detail| %>
        <tr>
          <td><%= detail.item.name %></td>
          <td><%= detail.item.price %></td>
          <td><%= detail.amount %></td>
          <td><%= (detail.item.price)*(detail.amount) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>