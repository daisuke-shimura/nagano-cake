<h3 class="my-3">注文履歴一覧</h3>

<table class="table table-bordered">
  <thead class="table-secondary">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= (order.created_at).year %>/<%= (order.created_at).month %>/<%= (order.created_at).day %></td>
      <td>
        〒<%= order.post_number %><br>
        <%= order.address %><br>
        <%= order.name %>
      </td>
      <td>
        <% order.order_details.each do |detail| %>
          <%= detail.item.name %><br>
        <% end %>
      </td>
      <td><%= (order.tax_total_cost)+(order.delivery_fee) %>円</td>
      <td><%= order.order_status_i18n %></td>
      <td><%= link_to "表示する", order_path(order.id), class:"btn btn-primary" %></td>
    </tr>
    <% end %>
  </tbody>
</table>