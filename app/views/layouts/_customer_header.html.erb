<div class="col-4">
  <%= link_to "LOGO", root_path, class: "btn btn-outline-dark my-2 w-25" %>
</div>
<div class="col-6 offset-2">
  <% if customer_signed_in? %>
    <ul class="nav my-2">
      <li class="nav-item mx-1"><%= link_to "マイページ", customers_my_page_path, class:"btn btn-outline-secondary" %></li>
      <li class="nav-item mx-1"><%= link_to "商品", items_path, class:"btn btn-outline-secondary" %></li>
      <li class="nav-item mx-1"><%= link_to "カート", cart_items_path, class:"btn btn-outline-secondary" %></li>
      <li class="nav-item mx-1"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"btn btn-outline-secondary" %></li>
    </ul>
    <h3>ログインユーザ：<%= current_customer.last_name %> <%= current_customer.first_name %></h3>
  <% else %>
    <ul class="nav my-2">
      <li class="nav-item mx-1"><%= link_to "About", about_path, class: "btn btn-outline-secondary" %></li>
      <li class="nav-item mx-1"><%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary" %></li>
      <li class="nav-item mx-1"><%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-secondary" %></li>
      <li class="nav-item mx-1"><%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-secondary" %></li>
    </ul>
  <% end %>

    <%= search_form_for @q, url: items_path, method: :get do |f| %>
      <div class="d-flex justify-content-end my-3">
        <div class="mx-1"><%= f.label :name_cont, "商品名検索", class: "form-label" %></div>
        <div class="mx-1"><%= f.search_field :name_cont, class: "form-control" %></div>
        <div class="mx-1"><%= f.submit "検索", class: "btn btn-primary" %></div>
      </div>
    <% end %>
</div>