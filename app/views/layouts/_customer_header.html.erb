<div class="col-4">
  <%= link_to root_path, class: "nav-link me-2" do %>
    <button type="button" class="btn btn-outline-dark w-25">LOGO</button>
  <% end %>
</div>
<div class="col-8">
  <% if customer_signed_in? %>
    <ul class="nav my-2">
      <li class="nav-item mx-1"><%= link_to "マイページ", customers_my_page_path, class:"btn btn-outline-secondary" %></li>
      <li class="nav-item mx-1"><%= link_to "商品", items_path, class:"btn btn-outline-secondary" %></li>
      <li class="nav-item mx-1"><%= link_to "カート", cart_items_path, class:"btn btn-outline-secondary" %></li>
      <li class="nav-item mx-1"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"btn btn-outline-secondary" %></li>
